    "regexes": [
      "example",
      "test",
      "mock",
      "fake",
      "dummy"
    ],
    "stopwords": [
      "example",
      "test",
      "mock",
      "fake",
      "dummy",
      "sample",
      "placeholder"
    ]
  }
}
