{
  "title": "gitleaks config for vokal",
  "extend": {
    "useDefault": true
  },
  "allowlist": {
    "description": "Allowlist for vokal",
    "paths": [
      ".gitleaksrc.json",
      "package-lock.json",
      "yarn.lock",
      "pnpm-lock.yaml"
