{
  "name": "voice-test",
  "version": "1.0.0",
  "description": "Production voice bot framework with TTS, STT, and AI evaluation using Neurolink",
  "main": "dist/src/index.js",
  "type": "module",
  "bin": {
    "voice-test": "dist/src/cli/index.js"
  },
  "scripts": {
    "dev": "tsc --watch",
    "build": "npm run clean && tsc",
    "start": "node dist/src/index.js",
    "cli": "node dist/src/cli/index.js",
    "clean": "rm -rf dist",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prebuild": "npm run format && npm run lint",
    "prepublishOnly": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "voice-bot",
    "tts",
    "stt",
    "speech-to-text",
    "text-to-speech",
    "neurolink",
    "ai-evaluation",
    "voice-interaction",
    "conversation-ai"
  ],
  "author": "Voice Test Team",
  "license": "MIT",
  "dependencies": {
    "@google-cloud/speech": "^7.2.1",
    "@juspay/neurolink": "^7.52.0",
    "chalk": "^5.3.0",
    "dotenv": "^16.4.5",
    "node-record-lpcm16": "^1.0.1",
    "ora": "^7.0.1",
    "puppeteer": "^24.23.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/node": "^20.19.18",
    "@types/yargs": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/voice-test.git"
  },
  "files": [
    "dist",
    "assets",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/src/index.js",
      "types": "./dist/src/index.d.ts"
    },
    "./errors": {
      "import": "./dist/src/errors/voice-test.errors.js",
      "types": "./dist/src/errors/voice-test.errors.d.ts"
    },
    "./constants": {
      "import": "./dist/src/constants/audio.constants.js",
      "types": "./dist/src/constants/audio.constants.d.ts"
    },
    "./utils": {
      "import": "./dist/src/utils/validation.js",
      "types": "./dist/src/utils/validation.d.ts"
    },
    "./logger": {
      "import": "./dist/src/utils/logger.js",
      "types": "./dist/src/utils/logger.d.ts"
    }
  }
}
