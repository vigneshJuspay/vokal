{
  "name": "@juspay/vokal",
  "version": "1.0.0",
  "description": "Production voice bot framework with TTS, STT, and AI evaluation using Neurolink",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "vokal": "dist/cli/index.js"
  },
  "scripts": {
    "dev": "tsc --watch",
    "build": "npm run clean && tsc",
    "cli": "node dist/cli/index.js",
    "clean": "rm -rf dist",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prebuild": "npm run format && npm run lint",
    "prepublishOnly": "npm run build",
    "test": "echo \"Warning: No tests specified yet\" && exit 0",
    "docs:build": "mkdocs build --strict --clean",
    "docs:serve": "mkdocs serve",
    "docs:gh-deploy": "mkdocs gh-deploy --force",
    "release": "semantic-release"
  },
  "keywords": [
    "voice-bot",
    "tts",
    "stt",
    "speech-to-text",
    "text-to-speech",
    "neurolink",
    "ai-evaluation",
    "voice-interaction",
    "conversation-ai",
    "typescript",
    "nodejs",
    "google-cloud",
    "voice-testing",
    "automated-testing"
  ],
  "author": "Juspay Technologies",
  "license": "MIT",
  "dependencies": {
    "@google-cloud/speech": "^7.2.1",
    "@juspay/neurolink": "^8.19.0",
    "chalk": "^5.3.0",
    "dotenv": "^16.4.5",
    "node-record-lpcm16": "^1.0.1",
    "ora": "^7.0.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@eslint/js": "^9.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.0.0",
    "@semantic-release/npm": "^11.0.3",
    "@semantic-release/release-notes-generator": "^12.0.0",
    "@types/node": "^20.19.18",
    "@types/yargs": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^8.52.0",
    "eslint": "^8.0.0",
    "globals": "^15.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.0.0",
    "semantic-release": "^22.0.12",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "engineStrict": true,
  "overrides": {
    "axios": "^1.7.8",
    "jsondiffpatch": "^0.7.2",
    "undici": "6.21.2",
    "@qdrant/js-client-rest": "^1.14.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/juspay/vokal.git"
  },
  "files": [
    "dist",
    "assets",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./errors": {
      "import": "./dist/errors/voice-test.errors.js",
      "types": "./dist/errors/voice-test.errors.d.ts"
    },
    "./constants": {
      "import": "./dist/constants/audio.constants.js",
      "types": "./dist/constants/audio.constants.d.ts"
    },
    "./utils": {
      "import": "./dist/utils/validation.js",
      "types": "./dist/utils/validation.d.ts"
    },
    "./logger": {
      "import": "./dist/utils/logger.js",
      "types": "./dist/utils/logger.d.ts"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js",
      "default": "./dist/types/index.js"
    },
    "./package.json": "./package.json",
    "./cli": {
      "types": "./dist/cli/index.d.ts",
      "import": "./dist/cli/index.js",
      "default": "./dist/cli/index.js"
    }
  },
  "bugs": {
    "url": "https://github.com/juspay/vokal/issues"
  },
  "homepage": "https://juspay.github.io/vokal/",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "provenance": true
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "lint-staged": {
    "src/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
