{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // CLI builds use NodeNext for consistent ESM module resolution across the entire codebase
    // This ensures module resolution behavior matches the base configuration
    "module": "NodeNext",
    "target": "ES2020",
    "lib": ["ES2020"],
    "outDir": "./dist/cli",
    "rootDir": "./src/cli",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/cli/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
